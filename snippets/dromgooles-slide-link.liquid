{%- doc -%}
  Renders a full-slide clickable link overlay for slideshow slides.
  
  Intended for use within slideshow _slide blocks.

  @param {string} link - The URL to navigate to when the slide is clicked
{%- enddoc -%}

{%- if link -%}
  <a href="{{ link }}" class="dromgooles-slide-link" aria-label="Go to linked page">
    <span class="visually-hidden">{{ link }}</span>
  </a>
{%- endif -%}

{% stylesheet %}
  .dromgooles-slide-link {
    position: absolute;
    inset: 0;
    z-index: 2;
    cursor: pointer;
    display: block;
  }
{% endstylesheet %}
