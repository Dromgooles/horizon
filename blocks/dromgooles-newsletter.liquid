{% comment %}
  Dromgoole's Newsletter Block
  Email signup with optional first/last name fields and custom button styling

  Settings:
  - Heading and description text with typography controls
  - Show/hide first/last name fields
  - Custom button colors
  - Layout and alignment options
{% endcomment %}

{% render 'dromgooles-newsletter', block: block %}

{% schema %}
{
  "name": "Newsletter (Dromgoole's)",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Newsletter"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Stay up to date with new releases, promotions, events, and news with our newsletter and email updates."
    },
    {
      "type": "header",
      "content": "t:content.typography"
    },
    {
      "type": "select",
      "id": "heading_preset",
      "label": "Heading style",
      "options": [
        {
          "value": "h2",
          "label": "t:options.h2"
        },
        {
          "value": "h3",
          "label": "t:options.h3"
        },
        {
          "value": "h4",
          "label": "t:options.h4"
        },
        {
          "value": "h5",
          "label": "t:options.h5"
        },
        {
          "value": "h6",
          "label": "t:options.h6"
        }
      ],
      "default": "h3"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Description size",
      "options": [
        {
          "value": "0.75rem",
          "label": "12px"
        },
        {
          "value": "0.875rem",
          "label": "14px"
        },
        {
          "value": "1rem",
          "label": "16px"
        },
        {
          "value": "1.125rem",
          "label": "18px"
        }
      ],
      "default": "0.875rem"
    },
    {
      "type": "header",
      "content": "Form fields"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder",
      "default": "Email"
    },
    {
      "type": "checkbox",
      "id": "show_name_fields",
      "label": "Show first/last name fields",
      "default": true
    },
    {
      "type": "text",
      "id": "first_name_placeholder",
      "label": "First name placeholder",
      "default": "First Name",
      "visible_if": "{{ block.settings.show_name_fields }}"
    },
    {
      "type": "text",
      "id": "last_name_placeholder",
      "label": "Last name placeholder",
      "default": "Last Name",
      "visible_if": "{{ block.settings.show_name_fields }}"
    },
    {
      "type": "select",
      "id": "input_size",
      "label": "Input text size",
      "options": [
        {
          "value": "0.75rem",
          "label": "12px"
        },
        {
          "value": "0.875rem",
          "label": "14px"
        },
        {
          "value": "1rem",
          "label": "16px"
        }
      ],
      "default": "0.875rem"
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "label": "Input border radius",
      "min": 0,
      "max": 16,
      "step": 1,
      "unit": "px",
      "default": 4
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Submit"
    },
    {
      "type": "select",
      "id": "button_width",
      "label": "Button width",
      "options": [
        {
          "value": "auto",
          "label": "Auto"
        },
        {
          "value": "100%",
          "label": "Full width"
        }
      ],
      "default": "auto"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background",
      "default": "#c06014"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "label": "Button border radius",
      "min": 0,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 4
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit"
        },
        {
          "value": "fill",
          "label": "t:options.fill"
        }
      ],
      "default": "fill"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit"
        },
        {
          "value": "fill",
          "label": "t:options.fill"
        }
      ],
      "default": "fill"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:settings.alignment",
      "default": "left"
    },
    {
      "type": "text_alignment",
      "id": "alignment_mobile",
      "label": "Alignment (mobile)",
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max width",
      "min": 200,
      "max": 600,
      "step": 20,
      "unit": "px",
      "default": 400,
      "info": "Maximum width for form fields"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:settings.top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
}, { "type": "text_alignment", "id": "alignment", "label": "t:settings.alignment", "default": "left" }, { "type":
"text_alignment", "id": "alignment_mobile", "label": "Alignment (mobile)", "default": "center" } ] }
{% endschema %}
