{% render 'dromgooles-collection-card', collection: block.settings.collection, hide_title: block.settings.hide_title %}

{% schema %}
{
  "name": "DRO Collection Card",
  "tag": null,
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:settings.collection"
    },
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Custom image (optional)",
      "info": "Overrides collection featured image"
    },
    {
      "type": "checkbox",
      "id": "hide_title",
      "label": "Hide title",
      "default": false,
      "info": "Useful for logo-only cards"
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "Custom title (optional)",
      "info": "Overrides collection title"
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Image style"
    },
    {
      "type": "select",
      "id": "image_style",
      "label": "Image fit",
      "options": [
        {
          "value": "cover",
          "label": "Cover (fill card)"
        },
        {
          "value": "contain",
          "label": "Contain (fit entire image)"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "%",
      "default": 0,
      "info": "Use 50% for circular color swatches"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "height",
      "label": "t:settings.height_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "custom"
    },
    {
      "type": "range",
      "id": "custom_height",
      "label": "t:settings.custom_height",
      "min": 100,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 300,
      "visible_if": "{{ block.settings.height == \"custom\" }}"
    },
    {
      "type": "select",
      "id": "height_mobile",
      "label": "t:settings.height_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "custom"
    },
    {
      "type": "range",
      "id": "custom_height_mobile",
      "label": "t:settings.custom_height",
      "min": 100,
      "max": 600,
      "step": 50,
      "unit": "px",
      "default": 200,
      "visible_if": "{{ block.settings.height_mobile == \"custom\" }}"
    }
  ]
}
{% endschema %}
