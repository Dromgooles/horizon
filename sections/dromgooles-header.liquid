{% liquid
  assign sticky = false
  if section.settings.enable_sticky_header == 'always' or section.settings.enable_sticky_header == 'scroll-up'
    assign sticky = true
  endif
%}

{% style %}
  .dro-header {
    padding-block-start: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-block-end: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  .section-dro-header {
    margin-block-end: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-dro-header {
      margin-block-end: {{ section.settings.margin_bottom }}px;
    }

    .dro-header {
      padding-block-start: {{ section.settings.padding_top }}px;
      padding-block-end: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Block-based header layout */
  .dro-header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--gap-xl);
  }

  .dro-header__group {
    display: flex;
    align-items: center;
    gap: var(--gap-xl);
  }

  .dro-header__group--left {
    justify-content: flex-start;
    flex: 0 1 auto;
  }

  .dro-header__group--center {
    flex: 1 1 auto;
    justify-content: center;
  }

  .dro-header__group--right {
    justify-content: flex-end;
    flex: 0 1 auto;
  }

  /* Drawer menu button */
  .dro-header__drawer {
    display: flex;
    align-items: center;
  }

  /* Search icon */
  .dro-header__search {
    display: flex;
    align-items: center;
  }

  /* Logo */
  .dro-header__logo {
    display: flex;
    align-items: center;
  }

  .dro-header__logo-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .dro-header__logo-image {
    display: block;
    height: {{ settings.logo_height }}px;
    width: auto;
  }

  .dro-header__logo-text {
    font-size: var(--font-heading-scale);
    font-weight: bold;
    margin: 0;
  }

  /* Account and cart icons */
  .dro-header__icon {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  {% if section.settings.show_line_separator %}
  .dro-header--bordered {
    border-block-end: 1px solid rgba(var(--color-foreground), 0.08);
  }
  {% endif %}
{% endstyle %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

