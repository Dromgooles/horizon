    style="--border-bottom-width: {{ section.settings.border_width }}px;"
  >
    <div class="header__columns spacing-style">
      {%- comment -%} Hidden ref for header.js component compatibility {%- endcomment -%}
      <span ref="headerMenu" style="display: none;"></span>
      <div class="dro-header__container">
        {%- comment -%} Left group {%- endcomment -%}
        <div class="dro-header__group dro-header__group--left">
          {%- for block in section.blocks -%}
            {%- if block.settings.position == 'left' -%}
              {%- case block.type -%}
                {%- when 'drawer' -%}
                  <div class="dro-header__drawer" {{ block.shopify_attributes }} ref="headerDrawerContainer">
                    {% render 'header-drawer', linklist: section.settings.menu, block: block, section: section %}
                  </div>

                {%- when 'search' -%}
                  <div class="dro-header__search" {{ block.shopify_attributes }}>
                    {% render 'search', style: 'modal' %}
                  </div>

                {%- when 'logo' -%}
                  <div class="dro-header__logo" {{ block.shopify_attributes }}>
                    {%- if request.page_type == 'index' -%}
                      <h1 class="dro-header__heading">
                    {%- endif -%}
                    <a href="{{ routes.root_url }}" class="dro-header__logo-link">
                      {% render 'image',
                        image: settings.logo,
                        class: 'dro-header__logo-image',
                        height: settings.logo_height,
                        text_fallback: shop.name
                      %}
                    </a>
                    {%- if request.page_type == 'index' -%}
                      </h1>
                    {%- endif -%}
                  </div>

                {%- when 'account' -%}
                  <div class="dro-header__icon" {{ block.shopify_attributes }}>
                    {%- if shop.customer_accounts_enabled -%}
                      <anchored-popover-component
                        data-close-on-resize="true"
                        class="account-popover"
                      >
                        {% render 'account-button' with 'dro-account-popover' as popover_id %}
                        <div
                          class="account-popover__panel details-content color-{{ settings.popover_color_scheme }}"
                          id="dro-account-popover"
                          popover="auto"
                          ref="popover"
                        >
                          {% render 'account-actions' %}
                        </div>
                      </anchored-popover-component>
                    {%- endif -%}
                  </div>

                {%- when 'cart' -%}
                  <div class="dro-header__icon" {{ block.shopify_attributes }}>
                    {% if settings.cart_type == 'drawer' and template.name != 'cart' %}
                      <cart-drawer-component
                        class="cart-drawer"
                        {% if settings.auto_open_cart_drawer %}
                          auto-open
                        {% endif %}
                      >
                        <button
                          class="button header-actions__action button-unstyled"
                          on:click="/open"
                          aria-haspopup="dialog"
                          aria-label="{{ 'accessibility.cart' | t }}"
                          aria-describedby="cart-bubble-text"
                          data-testid="cart-drawer-trigger"
                        >
                          <cart-icon
                            class="header-actions__cart-icon{% unless cart == empty %} header-actions__cart-icon--has-cart{% endunless %}"
                            data-testid="cart-icon"
                          >
                            <span class="svg-wrapper" aria-hidden="true">
                              {{ 'icon-cart.svg' | inline_asset_content }}
                            </span>
                            {% render 'cart-bubble', limit: 100, live_region: true %}
                          </cart-icon>
                        </button>
                      </cart-drawer-component>
                    {% else %}
                      <cart-icon
                        class="header-actions__cart-icon{% unless cart == empty %} header-actions__cart-icon--has-cart{% endunless %}"
                        data-testid="cart-icon"
                      >
                        <a
                          href="{{ routes.cart_url }}"
